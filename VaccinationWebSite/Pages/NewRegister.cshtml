@page
@model VaccinationWebSite.Pages.NewRegisterModel
@{
    ViewData["Title"] = "New Patient";
}
<div class="text-info text-center">
    <h1 class="p-5">NEW REGISTER</h1>
</div>
<div class="row justify-content-center">
    <form class="p-3 col-6" method="post">
        <div class="form-row">
            <div class="form-group">
                <label class="m-3" asp-for="Person.Name">FIRST NAME:</label>
                <input type="text" asp-for="Person.Name" class="form-control" placeholder="Name" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label class="m-3" asp-for="Person.LastName">LAST NAME:</label>
                <input type="text" class="form-control" asp-for="Person.LastName" placeholder="Last Name" required>
            </div>
        </div>
        <div class="form-group">
            <label class="m-3" asp-for="Person.CI">CI:</label>
            <input type="text" asp-for="Person.CI" class="form-control" placeholder="CI: 00000001" required>
        </div>
        <div class="form-group">
            <label class="m-3" asp-for="Person.Email">EMAIL:</label>
            <input type="email" asp-for="Person.Email" class="form-control" placeholder="Write Your Email" required>
        </div>
        <div class="form-group">
            <label class="m-3" asp-for="Person.BirthDate">BIRTH DATE:</label>
            <input type="date" class="form-control" asp-for="Person.BirthDate" required>
        </div>
        <div class="row justify-content-center">
            <button type="submit" style="width:150px;" class="btn btn-primary m-3">CHECK IN</button>
        </div>
    </form>
    
</div>
